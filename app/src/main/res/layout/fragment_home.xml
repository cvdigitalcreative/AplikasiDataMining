<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Halaman_Utama">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <Button
            android:layout_margin="10dp"
            android:id="@+id/lacakmobil_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lacak Mobil"/>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/updatedata_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Data"/>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/cara_pembayaran_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cara Pembayaran"/>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/updateprofil_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Profil"/>

        <Button
            android:layout_margin="10dp"
            android:id="@+id/customer_service_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Service"/>
    </LinearLayout>
</LinearLayout>